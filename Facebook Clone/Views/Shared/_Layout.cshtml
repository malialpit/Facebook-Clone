<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Facebook Clone</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Facebook Clone", "Index", "Account", new { area = "" }, new { @class = "navbar-brand" })
            </div>

            <div class="navbar-form navbar-left">
                <div class="input-group">
                    <input id="searchtext" type="text" class="form-control" placeholder="Search friends">
                    <div class="input-group-btn">
                        <button class="btn btn-default" type="submit">
                            <i class="glyphicon glyphicon-search"></i>
                        </button>
                    </div>
                </div>

                <ul id="livesearchul"></ul>
            </div>

            @if (Request.IsAuthenticated)
            {
        <div class="nav navbar-nav navbar-right owner">


            <li class="frcountli">
                @if (ViewBag.FrCount != null)
                {
        <li class="glyphicon glyphicon-user frnotif red @User.Identity.Name navbar-text"><span>@ViewBag.FrCount</span></li> }
                        else
                        {
        <li class="glyphicon glyphicon-user frnotif @User.Identity.Name navbar-text"><span></span></li>}

                <ul id="frnotiful"></ul>
                </li>
                <li class="navbar-text">@ViewBag.FullName</li>
                <li>@Html.ActionLink("Logout", "Logout", "Account")</li>
                <li>@Html.ActionLink("Post", "PostPartial")</li>
                




            </div>
            }

        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <footer>
            <p>&copy; @DateTime.Now.Year - Facebook Clone</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
